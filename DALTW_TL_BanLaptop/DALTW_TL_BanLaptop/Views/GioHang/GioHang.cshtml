@model IEnumerable<DALTW_TL_BanLaptop.Models.GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<center><h2>GIỎ HÀNG CỦA BẠN</h2></center>
<div class="card border-dark">
    <table class="table">
        <tr style="background-color: #ffd400">
            <th>MÃ SẢN PHẨM </th>
            <th>TÊN SẢN PHẨM </th>
            <th>ẢNH </th>
            <th>SỐ LƯỢNG </th>
            <th>ĐƠN GIÁ </th>
            <th>THÀNH TIỀN </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td style="width: 12%">@item.iMaLap</td>
                <td style="width: 26%">@item.sTenLap</td>
                <td style="width: 22%"><img src="~/HinhAnhSP/@item.sAnh" style="width:100%"></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @MaSP = item.iMaLap }))
                {
                    <td width="50px"><input style="width : 50px;" type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" size="2"></td>
                    <td style="width: 12%">@item.dDonGia</td>
                    <td style="width: 16%">@item.dThanhTien</td>
                    <td colspan="2"><a class="btn btn-dark" href="@Url.Action("XemChiTietSanPham", "SanPham", new {@maLap = item.iMaLap})">Chi tiết</a></td>
                    <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @MaSP = item.iMaLap }, new { @class = "btn btn-dark" })</td>
                    <td><input type="submit" value="Cập nhật" class="btn btn-dark"></td>
                }

            </tr>
        }

        <tr style="background-color: #ffd400">
            <td colspan="3" style="color:black; font-weight:bold; text-align:right;">Tổng cộng:</td>
            <td style="color:red; font-weight:bold;">@ViewBag.TongSoLuong</td>
            <td> </td>
            <td style="color:red; font-weight:bold;">@ViewBag.TongThanhTien VND</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
    @*<td colspan="2"><a href="/GioHang/DatHang" class="btn btn-primary">Thanh Toán</a></td>*@
    <td colspan="2"><a href="@Url.Action("DatHang", "GioHang")" class="btn btn-dark">Thanh Toán</a></td>
</div>