@{
    var cookie1 = Context.Request.Cookies["auth"];
    var roleCookie = Request.Cookies["role"];
}
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        function goBackToFirstPage() {
            // Xử lý chuyển hướng hoặc các hành động khác để quay lại trang chủ
            window.location.href = '/SanPham/ShowAllSanPham?page=1';
        }
    </script>
</head>
<body>
    <div class="text-center">
        <!--NAVIGATION-->
        <!-- <div class="container-fluid"> -->

        <div class="row" style="background-color: #ffd400; height:100px;">
            <div class="col-4 mt-2">
                <a href="#"><img src="/Images_Layout1/LogoFpt.png" width="70%" class="rounded" /></a>
            </div>
            <form class="row col-6 mt-2" action="~/SanPham/SearchSP" method="post">
                <div class="col-8 mt-4">
                    <input class="form-control mx-auto" type="search" placeholder="Search" aria-label="Search" name="txt_Search">
                </div>
                <div class="col-4 mt-3">
                    <button class="btn btn-link" id="searchButton" type="submit"><img src="/Images_Layout1/search.JPG" style="width:50px; height:50px" class="rounded" /></button>
                </div>
            </form>          
            <div class="col-2 text-dark" style="color: burlywood;">
                <p class="d-flex flex-column">
                    @if (cookie1 != null)
                    {
                        <span style="margin:5px 5px">Chào mừng <br /> @cookie1.Value</span>
                        <a style="margin:5px 5px" class="btn btn-dark" href="~/User/Logout">Đăng xuất</a>
                    }
                    else
                    {
                        <a class="btn btn-dark" href="~/User/Register" style="margin:5px 5px">Đăng ký</a>
                        <a class="btn btn-dark" href="~/User/Login" style="margin:5px 5px">Đăng nhập</a>
                    }
                </p>
            </div>
        </div>

        <div class="row" style="background-color:black; height:60px;">
            <div class="col-12 mt-3 mx-auto">
                <ul>
                    <li style="float:left; position:relative; display:block; width:150px; color:white; ">
                        <a href="~/SanPham/ShowAllSanPham?page=1" style="color:white;">TRANG CHỦ</a>
                    </li>
                    <li style="float:left; position:relative; display:block;width:150px;color:white;">
                        <a href="#" style="color:white;">LIÊN HỆ</a>
                    </li>
                    <li style="float:left; position:relative; display:block;width:150px;color:white;">
                        <a href="/TinTuc/ListTT" style="color:white;">TIN TỨC</a>
                    </li>
                    @Html.Action("GioHangPartial", "GioHang")
                    @if (roleCookie != null)
                    {
                        if (roleCookie.Value == "Admin")
                        {
                            <li style="float:left; position:relative; display:block;width:150px;color:white;">
                                <a href="~/User/Index" style="color:white;">QUẢN LÍ TÀI KHOẢN</a>
                            </li>
                            <li style="float:left; position:relative; display:block;width:150px;color:white;">
                                <a href="~/User/AllLaptop" style="color:white;">Quản lí Laptop</a>
                            </li>
                            <li style="float:left; position:relative; display:block;width:150px;color:white;">
                                <a href="~/User/AllDonHang" style="color:white;">Đơn hàng</a>
                            </li>
                            <li style="float:left; position:relative; display:block;width:150px;color:white;">
                                <a href="~/User/AllKhachHang" style="color:white;">Khách Hàng</a>
                            </li>
                            <li style="float:left; position:relative; display:block;width:150px;color:white;">
                                <a href="~/SanPham/laptopapi" style="color:white;">Ajax Laptop</a>
                            </li>
                        }
                    }                  

                </ul>
            </div>
        </div>
        <!-- </div> -->
        <!--CONTAIN-->
        <div class="row">
            <div class="col col-md-2  card">
                <ul class="list-group list-group-flush text-left">
                    <li class="list-group-item" style="background-color: #ffd400;"><a href="#" style="text-transform:uppercase; text-decoration:none; color:black; font-weight:bold;">HÃNG MÁY</a></li>
                    @Html.Action("HangMayPartial","HangMay")

                </ul>


                <ul class="list-group list-group-flush text-left">
                    <li class="list-group-item" style="background-color:#ffd400;"><a href="#" style="text-transform:uppercase; text-decoration:none; color:black; font-weight:bold;">TÌNH TRẠNG MÁY</a></li>
                    @Html.Action("TinhTrangMayPartial", "TinhTrangMay")
                </ul>


                <ul class="list-group list-group-flush text-left">
                    <li class="list-group-item" style="background-color:#ffd400;"><a href="#" style="text-transform:uppercase; text-decoration:none; color:black; font-weight:bold;">MÀN HÌNH</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Màn hình 13 inches</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Màn hình 14 inches</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Màn hình 14.5 inches</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Màn hình 15 inches</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Màn hình 15.6 inches</a></li>
                </ul>


            </div>
            <div class="col col-md-8" style="background-color: white;">
                <div class="row">
                    <div class="col">

                        <div id="carouselExampleControls" class="carousel w-100 mx-auto mt-3" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img style="height: 240px" src="~/Images_Layout1/Banner/Banner1.jpg" class="d-block w-100 " alt="Ảnh 1" />
                                </div>
                                <div class="carousel-item">
                                    <img style="height: 240px" src="~/Images_Layout1/Banner/Banner2.jpg" class="d-block w-100" alt="Ảnh 2" />
                                </div>
                                <div class="carousel-item">
                                    <img style="height: 240px" src="~/Images_Layout1/Banner/Banner3.jpg" class="d-block w-100 " alt="Ảnh 3" />
                                </div>
                                <div class="carousel-item">
                                    <img style="height: 240px" src="~/Images_Layout1/Banner/Banner4.jpg" class="d-block w-100 " alt="Ảnh 4" />
                                </div>

                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div>
                    @RenderBody()




                </div>
            </div>
            <div class="col col-md-2 card">
                <ul class="list-group list-group-flush text-left">
                    <li class="list-group-item" style="background-color:#ffd400;"><a href="#" style="text-transform:uppercase; text-decoration:none; color:black; font-weight:bold;">Tin Tức</a></li>
                    @Html.Action("TinTucPartial", "TinTuc")

                    <li class="list-group-item"><a href="~/ThoiTietAPI/Index" style="text-transform:uppercase; text-decoration:none;">Thời tiết</a></li>
               
                </ul>


            </div>
        </div>
        <!-- Container của nút -->
        <div style="position: fixed; top: 50%; right: 10px; transform: translateY(-50%); z-index: 1000;">
            <button onclick="goBackToFirstPage()" style="cursor: pointer; font-size: 20px;">&#9650;</button>
        </div>
        <!--Footer-->
        <div class="row" style="background-color:#ffd400; text-align:center; border: 1px solid black;">
            <div class="col text-light mt-3 mb-3" style="text-align:center; color: black !important;">© 2007 - 2020 Công Ty Cổ Phần Bán Lẻ Kỹ Thuật Số FPT /<br />Địa chỉ: 261 - 263 Khánh Hội, P5, Q4, TP. Hồ Chí Minh / GPĐKKD số 0311609355 do Sở KHĐT TP.HCM cấp ngày 08/03/2012.<br /> GP số 47/GP-TTĐT do sở TTTT TP HCM cấp ngày 02/07/2018. Điện thoại: (028)73023456. Email: fptshop@fpt.com.vn. Chịu trách nhiệm nội dung: Nguyễn Trịnh Nhật Linh. </div>
        </div>
    </div>

</body>
</html>