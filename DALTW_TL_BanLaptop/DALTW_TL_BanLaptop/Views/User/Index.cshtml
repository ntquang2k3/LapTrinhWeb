@model IEnumerable<DALTW_TL_BanLaptop.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container">
    <h2 style="color:purple">Danh sách quản lí người dùng</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HOTEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DIENTHOAI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TAIKHOAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMAIL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PHANQUYEN)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HOTEN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIENTHOAI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TAIKHOAN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PHANQUYEN)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa cập nhật", "EditUser", new { id = item.MAKH })  
                </td>
                <td>
                    @Html.ActionLink("Xóa", "RemoveUser", new { id = item.MAKH })
                </td>
            </tr>
        }

    </table>
</div>
